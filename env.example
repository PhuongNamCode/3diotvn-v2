# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/web?schema=public"

# Google OAuth
NEXT_PUBLIC_GOOGLE_CLIENT_ID="<your_gsi_client_id>"

# Perplexity API (for news refresh)
PERPLEXITY_API_KEY="<your_perplexity_api_key>"
PERPLEXITY_MODEL="sonar"

# SMTP Email Configuration (Default)
SMTP_HOST="smtp.gmail.com"
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_PORT="587"
SMTP_SECURE="false"

# Optional: Override SMTP settings via Admin Panel
# If these are set, they will override the .env settings
# SMTP_OVERRIDE_HOST=""
# SMTP_OVERRIDE_USERNAME=""
# SMTP_OVERRIDE_PASSWORD=""

# Admin Security
ADMIN_RESET_CODE="3DIOT2025"
